<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnLoadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_load_picture" />

    <Button
        android:id="@+id/btnRandomImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_random_picture" />

    <Button
        android:id="@+id/btnExampleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_example_picture" />
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/sec_one_description"
        android:src="@android:drawable/ic_menu_view" />


</LinearLayout>